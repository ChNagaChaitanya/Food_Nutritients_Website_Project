        <script>
            new Chart(document.getElementById("chart-0"), {
        type: 'bar',
        title: {
            text: "Title in Big Fonts",
            fontSize: 50,
        },
        
        data: {
            labels: [@Html.Raw(@Model[0].Labels)],
          datasets: [
              {
                  label: "Protein(G)",
                    
            backgroundColor: 'rgba(54, 162, 235, 0.2)',
            data: [@Model[0].Data]
          }
        ]
      },
        options: {
            
            aspectRatio: 3,
            responsive: true,
            maintainAspectRatio: true,
            
            scales: {
		xAxes: [{
			ticks: {
				callback: function (food) {
					if (/\s/.test(food)) {
						return food.split(" ");
					} else {
						return food;
					}
				}
			}
		}],
        yAxes: [{
			stacked: true,
			scaleLabel: {
				display: true,
				labelString: 'Grams'
			}
		}]
